<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/textViewNomeTime"
        android:layout_width="173dp"
        android:layout_height="57dp"
        android:layout_marginTop="68dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewInfoTime"
        android:layout_width="296dp"
        android:layout_height="206dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewNomeTime"
        app:layout_constraintStart_toStartOf="@+id/textViewNomeTime"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeTime"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewInfoLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/imageViewInfoTime"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/imageViewInfoTime"
        app:layout_constraintTop_toBottomOf="@+id/imageViewInfoTime" />

    <TextView
        android:id="@+id/textViewInfoTitulos"
        android:layout_width="295dp"
        android:layout_height="207dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textViewInfoLocation"
        app:layout_constraintStart_toStartOf="@+id/textViewInfoLocation"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfoLocation" />
</androidx.constraintlayout.widget.ConstraintLayout>